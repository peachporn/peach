html,
body,
h1, h2, h3, h4, h5,
figure,
ul, dl, dd, ol,
menu
  margin 0

html
  font-size 14px

  +medium()
    font-size 20px

*
  box-sizing border-box

ul, ol
  list-style-type none
  padding 0

button,
a,
select
  &::-moz-focus-inner
    border 0

select:-moz-focusring
  color transparent
  text-shadow 0 0 0 black

h1,
h2,
span
  cursor default

h3
  font-size 1em

a
  color black
  cursor pointer
  text-decoration none

  &:visited
    color black

aside
  menu
    padding 0

label
  display contents

body
  overflow-x hidden
  max-width 100vw
  background-image mainGradient()
  background-repeat no-repeat
  color black
