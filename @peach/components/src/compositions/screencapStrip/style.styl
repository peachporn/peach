.screencap-strip
  width calc(100% + 4em)
  display grid
  grid-template-columns repeat(5, 1fr)
  margin-left -2em
  margin-right -2em

  +medium()
    grid-template-columns 1fr

.screencap-grid
  margin 0
  display grid
  grid-template-columns repeat(5, 1fr)
  grid-template-rows repeat(3, calc(648px / 3))

  +medium()
    grid-template-columns repeat(3, 1fr)
    grid-template-rows repeat(5, calc(400px / 5))

  .screencap-strip__element
    display contents

    img
      object-fit cover
      width 100%
      height 100%

.screencap-strip__element
  label
    display block
    cursor pointer

  img
    max-height 100%
    max-width 100%

  input
    display none

.screencap-strip__element--active
  img
    border-bottom 3px solid mainColor

.screencap-strip__element--tint
  img
    tint()
