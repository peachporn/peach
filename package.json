{
  "name": "peach",
  "version": "3.0.0-alpha",
  "description": "porn organizer",
  "repository": "https://github.com/peachporn/peach.git",
  "author": "GalateaPolymorph <galateapolymorph@gmail.com>",
  "license": "GPL-3.0",
  "private": true,
  "scripts": {
    "dev": "cd dist; nodemon --config ../nodemon.dev.json",
    "run:app": "cd dist; ./peach",
    "run:migrate": "cd dist; ./migrate",
    "watch": "DEVELOPMENT=true yarn build:copy; run-p watch:*",
    "watch:app": "yarn workspace @peach/app run watch",
    "watch:frontend": "yarn workspace @peach/frontend run watch",
    "watch:migrate": "yarn workspace @peach/migrate run watch",
    "watch:types": "nodemon --config nodemon.types.json",
    "build": "mkdir -p dist; run-p build:*",
    "build:copy": "scripts/copy-artifacts",
    "build:app": "yarn workspace @peach/app run build",
    "build:frontend": "echo 'TODO'",
    "build:migrate": "yarn workspace @peach/migrate run build",
    "generate": "run-p generate:*",
    "generate:prisma": "prisma generate",
    "generate:types": "run-p generate:types:*",
    "generate:types:backend": "yarn workspace @peach/backend run generate",
    "generate:types:types": "yarn workspace @peach/types run generate",
    "typecheck": "yarn workspaces run tsc",
    "migrations:save": "DATABASE_URL=file:./database.db prisma migrate dev --preview-feature",
    "studio": "cd dist; DATABASE_URL=file:./database.db prisma studio --port 5555"
  },
  "workspaces": [
    "@peach/*"
  ],
  "devDependencies": {
    "@graphql-codegen/add": "^2.0.2",
    "@graphql-codegen/cli": "^1.15.0",
    "@graphql-codegen/fragment-matcher": "^2.0.1",
    "@graphql-codegen/typescript": "^1.15.0",
    "@graphql-codegen/typescript-operations": "^1.15.0",
    "@graphql-codegen/typescript-resolvers": "^1.15.0",
    "@prisma/cli": "^2.14.0",
    "@types/eslint": "^7.2.6",
    "@typescript-eslint/eslint-plugin": "^4.13.0",
    "@typescript-eslint/parser": "^4.13.0",
    "dotenv-cli": "^4.0.0",
    "esbuild": "^0.8.32",
    "eslint": "^7.1.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prefer-arrow": "^1.2.1",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.20.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "graphql": "^15.4.0"
  }
}
