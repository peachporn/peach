.movie-detail-page .container
  display grid
  grid-template-columns repeat(5, 1fr)
  grid-template-areas "headline headline headline headline headline" "fetish fetish fetish fetish fetish" "stats stats actresses actresses actresses" "screencaps screencaps screencaps screencaps screencaps" "table table table actions actions"
  grid-gap 2em

  .movie-metadata-table
    grid-area table
    .tablecell
      word-break break-all
      &:first-child
        width 30%


  .title-form
    grid-area headline

    .headline
      cursor pointer

  .add-actress-form
    grid-area actresses

  .screencap-strip
    grid-area screencaps

  .movie-detail-actions
    grid-area actions

  .fetish-form
    grid-area fetish

.scene-form
  display grid
  grid-template-areas "input actions controls" "bar bar bar"
  grid-template-columns 1fr 3fr 1fr
  background white

.scene-view
  grid-area bar

.scene-form__actions
  grid-area actions
  display flex
  flex-flow row wrap
  align-items flex-start
  min-height 5.5em
  background white

.scene-form__input
  grid-area input
  align-self flex-start
  min-height 5.5em

.scene-form__controls
  grid-area controls
  display flex
  align-items center
  justify-content center
  background white

