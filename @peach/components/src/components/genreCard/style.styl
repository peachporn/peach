.genre-card-grid
  display grid
  grid-template-columns repeat(auto-fit, minmax(250px, 1fr));
  grid-gap 1em
  padding 1em

.genre-card-grid--white
  background white

.genre-card-list
  display grid
  grid-template-columns repeat(auto-fill, 150px);
  grid-gap 1em
  padding 1em

.genre-card
  position relative
  display grid
  column-gap 1em
  align-items center
  grid-template-columns 3.5em 1fr
  grid-template-rows 1fr 1fr
  border-radius .5em
  background white
  cursor pointer
  padding-right 1em
  max-height 3.5em
  bounce()

  &:hover
    .genre-card__button-slot
      visibility visible
      opacity 1

  &:focus
    outline none

.genre-card__image
  grid-row span 2
  border-radius .5em
  max-height 100%
  max-width 100%

.genre-card__name
  font-size 1.1em
  align-self flex-end
  cursor pointer
  white-space nowrap
  overflow hidden

.genre-card__category
  font-size .8em
  align-self flex-start
  cursor pointer

.genre-card__button-slot
  visibility hidden
  transition opacity .2s ease
  opacity 0
  position absolute
  top 0
  right 0
  padding .2em

.genre-card--focus,
.genre-card:focus
  outline none
  border-bottom 3px solid mainColor

.genre-card--small
  max-height 2.5em
  column-gap .5em
  border-bottom 3px solid transparent

  .genre-card__name
    font-size 1em

  .genre-card__category
    font-size 0.8em

  .genre-card__image
    height calc(100% + 4px)
    max-height calc(100% + 4px)
    max-width 3em
    object-fit cover
    position relative
    top 1px

.genre-card--shadow
  box-shadow 0 0 10px rgba(0,0,0,.2)

.genre-card--small.genre-card--shadow
  box-shadow 0 0 6px rgba(0,0,0,.2)

.genre-card--white
  background #fff
