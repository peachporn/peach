.spinner
  position relative
  z-index 3000
  margin 60px auto
  text-indent -9999em
  font-size 10px
  transform translateZ(0)
  animation spinner 1.1s infinite linear, fadeIn .5s forwards ease

.spinner--peach
  border-top 1.1em solid alpha(mainColor, .2)
  border-right 1.1em solid alpha(mainColor, .2)
  border-bottom 1.1em solid alpha(mainColor, .2)
  border-left 1.1em solid mainColor

.spinner--white
  border-top 1.1em solid alpha(white, .2)
  border-right 1.1em solid alpha(white, .2)
  border-bottom 1.1em solid alpha(white, .2)
  border-left 1.1em solid white

.spinner,
.spinner:after
  width 10em
  height 10em
  display block
  border-radius 50%

@keyframes spinner
  0%
    transform rotate(0)
    -webkit-transform rotate(0)

  100%
    transform rotate(360deg)
    -webkit-transform rotate(360deg)
