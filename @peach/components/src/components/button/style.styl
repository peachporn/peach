buttonColor = mainColor

.btn
  position relative
  margin .2em
  padding .5em
  border none
  border-radius .15em
  color white
  font-weight bold
  cursor pointer
  transition background .2s ease, color .2s ease

  fontMedium()
  bounce()


.btn--main
  background-color buttonColor

  bounce()

.btn--inverted
  background #fff
  color buttonColor

.btn--main[disabled]
  background-color white
  color lightness(white, 70%)
  background-image none

.btn--cancel,
.btn--number
  background-color lightness(white, 70%)
  background-image none

// Button for Steppers
.btn--small
  fontSmall()

.btn--wide
  margin auto
  padding .25em
  width 80%
